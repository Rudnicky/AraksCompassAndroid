<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calibration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arakjel.arakscompass.activities.CalibrationActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_background"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/backgroundImageView" />

    <ImageView
        android:id="@+id/arrowImageView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/img_arrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/img_how_to_calibrate"
        android:layout_marginTop="5dp"
        android:id="@+id/howToCalibrateImageView"
        android:layout_below="@+id/headertextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Compass Calibration"
        style="@style/HeaderFont"
        android:id="@+id/headertextView"
        android:layout_below="@+id/arrowImageView"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/how_to_calibrate"
        style="@style/MediumFont"
        android:id="@+id/explenationTextView"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/howToCalibrateImageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/img_rotate_axis"
        android:id="@+id/howToCalibrateAxisImageView"
        android:layout_below="@+id/explenationTextView"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
